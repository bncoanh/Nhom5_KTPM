@{
    ViewBag.Title = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.min.js"></script>
</head>
<body>
    <table style="width:700px;">
        <tr>
            <td style="font-size:larger"><b>LIÊN HỆ</b></td>
        </tr>
        @using(Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px;width:80px;">
                <td>Họ tên khách hàng:</td>
                <td>@Html.TextBox("HoTenKH")
                    @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Số điện thoại:</td>
                <td>@Html.TextBox("Dienthoai")
                    @ViewData["Loi2"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Email:</td>
                <td>@Html.TextBox("Email")
                    @ViewData["Loi3"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Địa chỉ:</td>
                <td>
                    @Html.TextBox("Diachi")
                </td>
            </tr>
            <tr style="height:40px">
                <td>Nội dung:</td>
                <td>
                    @Html.TextArea("Noidung")
                    @ViewData["Loi4"]
                </td>
            </tr>
            <tr>
                <td><input class="btn btn-outline-danger" type="submit" value="Gửi liên hệ" /></td>
            </tr>
        }
        </table>
    </body>
</html>
<style>
    #Noidung {
        width:350px;
        height:200px;
    }
</style>
