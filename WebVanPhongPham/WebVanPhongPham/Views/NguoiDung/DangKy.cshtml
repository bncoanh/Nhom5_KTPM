@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng Ký</title>
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
<table style="width: 580px;">
            <tr>
                <td class="textcenter"><p id="textTitle"><b>ĐĂNG KÝ TÀI KHOẢN</b></p></td>
            </tr>
        @using(Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td>Họ tên khách hàng:</td>
                <td>@Html.TextBox("HoTenKH")
                    @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Tên đăng nhập:</td>
                <td>@Html.TextBox("TenDN")
                    @ViewData["Loi2"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Mật khẩu:</td>
                <td><input type="password" name="Matkhau"/>
                    @ViewData["Loi3"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Nhập lại mật khẩu:</td>
                <td><input type="password" name="Matkhaunhaplai"/>
                    @ViewData["Loi4"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Email:</td>
                <td>@Html.TextBox("Email")
                    @ViewData["Loi5"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Địa chỉ:</td>
                <td><input type="text" name="DiaChi" /></td>
            </tr>
            <tr style="height:40px">
                <td>Điện thoại:</td>
                <td>@Html.TextBox("Dienthoai")
                    @ViewData["Loi6"]
                </td>
            </tr>
            <tr style="height:40px">
                <td>Ngày sinh:</td>
                <td><input type="date" name="NgaySinh" /></td>
            </tr>
            <tr>
                <td><input class="btn btn-outline-primary" type="submit" value ="Đăng ký" /></td>
            </tr>
        }
        </table>
    </body>
    <br />
    <br />
</html>
